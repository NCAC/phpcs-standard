{
  "git": {
    "commitMessage": "release: v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": true
  },
  "plugins": {
    "@release-it/bumper": {
      "in": [
        "package.json",
        "composer.json"
      ]
    },
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "writerOpts": {
        "transform": {
          "feat": "✨ Features",
          "fix": "🐛 Bug Fixes",
          "chore": "🔧 Maintenance",
          "refacto": "♻️ Refactoring",
          "docs": "📚 Documentation",
          "release": "🚀 Releases"
        }
      }
    }
  },
  "hooks": {
    "before:bump": "vendor/bin/phing check"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true
  }
}