{
  "name": "ncac-phpcs-suite-dev",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "settings": {
        // # auto open .code-workspace file
        "autoOpenWorkspace.enableAutoOpenIfSingleWorkspace": true
      },
      "extensions": [
        // PHP and code quality tools
        "bmewburn.vscode-intelephense-client",
        "esbenp.prettier-vscode",
        // Git and workflow tools
        "gxl.git-graph-3",
        // PHPCS/PHPCBF integration
        "valeryanm.vscode-phpsab",
        // Debugging
        "xdebug.php-debug",
        // Batch rename utility
        "jannisx11.batch-rename-extension",
        // GitHub Actions integration
        "github.vscode-github-actions",
        "github.vscode-pull-request-github"
      ]
    }
  },
  "postCreateCommand": "sh /workspace/.docker/post-create-command.sh",
  "forwardPorts": [9047]
}
