{
  "name": "ncac/phpcs-standard",
  "description": "NCAC PHPCS Standard - TypeScript-like approach to PHP code quality with strict rules for modern, type-safe development",
  "type": "phpcodesniffer-standard",
  "keywords": [
    "phpcs",
    "code-quality",
    "coding-standard",
    "psr",
    "static-analysis",
    "typescript-style"
  ],
  "homepage": "https://github.com/ncac/phpcs-standard",
  "license": "MIT",
  "authors": [
    {
      "name": "Nicolas Catrice-Auzon Cape",
      "email": "dev.ncac@gmail.com",
      "homepage": "https://gravatar.com/devncac",
      "role": "Tech Lead"
    }
  ],
  "support": {
    "issues": "https://github.com/ncac/phpcs-standard/issues",
    "source": "https://github.com/ncac/phpcs-standard",
    "docs": "https://github.com/ncac/phpcs-standard/blob/main/README.md"
  },
  "require": {
    "php": "^8.2",
    "slevomat/coding-standard": "^8.22",
    "squizlabs/php_codesniffer": "^4"
  },
  "require-dev": {
    "phing/phing": "^3.0",
    "phpcsstandards/phpcsdevtools": "^1.2",
    "phpunit/phpunit": "^9.6 || ^10.0",
    "vimeo/psalm": "^5.26"
  },
  "autoload": {
    "psr-4": {
      "NCAC\\": "NCAC/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "NCAC\\Tests\\": "tests/NCAC/"
    }
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.2.18"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "XDEBUG_MODE=coverage phpunit --coverage-html coverage",
    "e2e-test": "php e2e-tests/run.php",
    "test-all": [
      "@test",
      "@e2e-test"
    ],
    "check": "phing check",
    "phing": "phing"
  }
}
